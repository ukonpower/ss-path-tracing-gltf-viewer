{
  "compilerOptions": {
	"sourceMap": true,
    "target": "es5",
	"module": "es2015",
	"jsx": "react",
	"moduleResolution": "node",
	"allowSyntheticDefaultImports": true,
	"lib": [
		"es2020",
		"dom"
	],
    "typeRoots": ["node_modules/@types"],
    "rootDir": "./",
	"baseUrl": "./",
	"paths": {
		"@OrayTracingRenderer": [
			"src/libs/OrayTracingRenderer/src"
		],
		"@ore-three-ts": [
			"src/libs/ore-three-ts/src"
		],
		"@store": [
			"src/views/store.tsx"
		],
		"@components": [
			"src/views/components/"
		],
		"@modules/*": [
			"src/views/modules/*"
		],
	}
  },
  "include": ["./"]
} 
